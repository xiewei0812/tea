.article-list {
  display: flex;
  border-bottom: 1px solid #e5e5e5;
  padding-bottom: 5px;
}
.article-list .article-list-image {
  margin-left: 10px;
  margin-top: 10px;
  width: 50px;
  height: 50px;
  border-radius: 10%;
}
.article-list .article-list-content {
  display: flex;
  flex-direction: column;
}
.article-list .article-list-content .content-title {
  margin-top: 12px;
  margin-left: 15px;
  font-size: 20px;
  color: #789dc5;
}
.article-list .article-list-content .content-article {
  margin: 0 15px;
}
.article-list .article-list-content .article-image {
  display: flex;
  margin: 5px 15px;
  margin-right: 15px;
}
.article-list .article-list-content .article-image .article-image-content {
  margin-right: 1%;
}
.article-list .article-list-content .article-image .article-image-list {
  height: 130px;
  width: 130px;
}
.article-list .article-list-content .delbtn {
  width: 100%;
  margin: 5px 15px;
}

